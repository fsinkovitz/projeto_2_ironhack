<div class="divPai">
  <div>
    <img class="imgCover" src="{{book.cover}}">
  </div>
  <div>
    <form id="form" action="/editbooks/{{ book._id }}" method="POST" enctype="multipart/form-data">
      <h2>Edit Books</h2>
      <a>Title</a>
      <input type="text" name="title" value='{{ book.title }}'>
      <a>Gender</a>
      <input type="text" name="gender" value='{{ book.gender }}'>
      <a>Author</a>
      <input type="text" name="author" value='{{ book.author }}'>
      <a>Coust</a>
      <input type="number" name="price" value='{{ book.price }}'>
      <div>
        <a>Description</a></div>
      <textarea name="description" id="description" cols="30" rows="10">{{ book.description }}</textarea>
      <div>
        <a>Publish Company</a>
      </div>
      <input type="text" name="publishCompany" value='{{ book.publishCompany }}'>
      <a>Cover</a>
      <input type="file" name="cover" value='{{ book.cover }}'>

      {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
      {{/if}}

      <div>
        <button type="submit">Edit Book</button>
      </div>
      <div>
        <button type="button" onclick="javascript:history.back()">Go Back</button>
      </div>
    </form>
  </div>
</div>